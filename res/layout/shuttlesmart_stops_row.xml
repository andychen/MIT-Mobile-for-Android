<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:minHeight="@dimen/minRowHeight"
  android:layout_height="wrap_content">
	
  	<TextView android:id="@+id/shuttlesmart_stopsRowRouteTV"
	    android:gravity="left" 
	    style="@style/ListItemPrimary"
		android:layout_height="wrap_content"
        android:paddingLeft="@dimen/horizontalPadding"
		android:paddingRight="@dimen/horizontalPadding"
        android:paddingTop="@dimen/verticalPadding"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/verticalPadding" android:layout_width="wrap_content"/>

	<TextView android:id="@+id/shuttlesmart_stopsRowMinsTV"
	    android:gravity="right" 
        style="@style/ListValue"
        android:scaleType="fitEnd"
		android:layout_height="wrap_content"
        android:paddingRight="@dimen/horizontalPadding"
        android:paddingTop="@dimen/verticalPadding"
        android:layout_gravity="fill_horizontal" 
        android:paddingBottom="@dimen/verticalPadding" android:layout_width="fill_parent"/>
</LinearLayout>